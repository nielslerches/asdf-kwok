#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=./lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

mkdir -p "$ASDF_DOWNLOAD_PATH"

KERNEL_NAME="$(uname -s)"
case "${KERNEL_NAME}" in
    Darwin)
            OS="darwin"
            ;;
    Linux)
           OS="linux"
           ;;
    *) echo "Unknown operating system: ${KERNEL_NAME}"
       exit 1
esac

MACHINE="$(uname -m)"
case "${MACHINE}" in
    x86_64) ARCHITECTURE="amd64" ;;
    aarch64|arm64) ARCHITECTURE="arm64" ;;
    *) echo "Unknown machine architecture: ${MACHINE}"
       exit 1
esac

tool_names=("kwok" "kwokctl")

for tool_name in ${tool_names[@]}; do
    input_filename="$tool_name-$OS-$ARCHITECTURE"
    output_filename="$ASDF_DOWNLOAD_PATH/bin/$tool_name"

    # Download tar.gz file to the download directory
    download_release "$ASDF_INSTALL_VERSION" "$input_filename" "$output_filename"
done
